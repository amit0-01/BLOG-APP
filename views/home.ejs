<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
</head>
<body>
    <%- include('./partials/nav') %>
     <div class="container mt-3 row row-cols-4">
        <% blogs.forEach(blog =>{ %>
            <div class="col">
            <div class="card col" style="width: 17rem; ">
                <img style="height: 300px;" class="card-img-top" src="<%= blog.coverImageURL %>" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                </div>
              </div>
            </div>
      <%  }) %>
     </div>
    <%- include('./partials/scripts') %>
</body>
</html>