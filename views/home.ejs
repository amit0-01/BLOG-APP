<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
</head>
<style>
    body{
        overflow-x: hidden;
    }

    .title-clamp {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    -webkit-line-clamp: 3; 
    text-overflow: ellipsis;
    line-height: 1.2; 
    max-height: 3.6em; 
}
</style>
<body>
    <%- include('./partials/nav') %>
    <div class="px-2 mt-3">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-5">
          <% blogs.forEach(blog => { %>
              <div class="col mb-4">
                  <div class="card" style="width: 100%; height: 100%;">
                      <img class="card-img-top" src="<%= blog.coverImageURL %>" alt="Card image cap" style="height: 200px; object-fit: cover;">
                      <div class="card-body">
                          <h5 class="card-title title-clamp"><%= blog.title %></h5>
                          <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                      </div>
                  </div>
              </div>
          <% }) %>
      </div>
  </div>
  
    <%- include('./partials/scripts') %>
</body>
</html>